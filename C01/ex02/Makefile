ifneq ($(filter clean fclean, $(MAKECMDGOALS)),)
$(info Cleaning HiThisIsBrain ðŸš®)
else
$(info Compiling HiThisIsBrain ðŸŽ®)
endif

NAME = Refs
CC = c++
RM = rm -f
CFLAGS = -Wall -Wextra -Werror -std=c++98
SRC = main.cpp

all: $(NAME)

$(NAME): $(SRC)
	$(CC) $(CFLAGS) $(SRC) -o $(NAME)

clean:
	$(RM) $(NAME)

fclean: clean

re: fclean all

.PHONY: all clean fclean re